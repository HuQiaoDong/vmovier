.van-nav-bar .van-nav-bar__title {
  width: 100%;
  max-width: 100%;
}

.van-tabs__nav {
  max-width: 60%;
  margin: 0 auto;
}

.van-nav-bar__left,
.van-nav-bar__right {
  z-index: 9;
}

van-overlay .wrapper {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;

}
.van-tabs__wrap.van-hairline--top-bottom .van-tabs__scroll{
  background: black;
  color: white;
}
.van-tabs__wrap.van-hairline--top-bottom:after {
  border-width: 0px 0;
}
.van-ellipsis.van-tab .van-ellipsis{
  /* color: #888888; */
}
.van-ellipsis.van-tab.van-tab--active{
  /* color: white !important; */
  color: var(--tab-active-text-color,white);
  font-weight: var(--font-weight-bold,400);
}
.van-tabs__nav.van-tabs__nav--line .van-tabs__line{
  width: 38px !important;
  background-color: var(--tabs-bottom-bar-color,white);
  left: -3px;
}
  
van-grid .van-grid-item__content--square {
  padding: 0;
}
van-grid .van-grid-item__content--square text{
  position: absolute;
  top: 0;
  bottom: 0;
  margin: auto;
  height: 25px;
  color: white;
}
van-grid .van-grid-item__content--square image{
  filter: brightness(0.7);
}

/* 发现页 */
.title{
  text-align: center;
}

.swipter-item{
  position: relative;
}
.content image{
  filter: brightness(0.8);
}
.info{
  position: absolute;
  bottom: 10px;
  left: 10px;
  color: white;
}
.info .type{
  font-size: 12px;
  width: 40px;
  padding-bottom: 8px;
  border-bottom: 1px solid white;
}
.info .desc{
  font-size: 12px;
}
.info .albumTitle{
  padding-top: 8px;
}

/* 遮罩层 */
.mask{
  width: 100%;
  height: 100%;
  background: white;
  position: absolute;
  top: -50px;
  z-index:999;
}
.nav{
  position: relative;
  z-index: 1;
}
.page-section-spacing{
  margin-top: 0px !important;
}
.image{
  position: relative;
}
.image .prev{
  position: absolute;
  top: 10px;
  left:10px;
  color: white;
  font-size: 25px;
  z-index: 1;
}

@import '../posts/posts.wxss'